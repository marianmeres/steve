{
	"name": "@marianmeres/steve",
	"version": "1.9.3",
	"exports": "./src/mod.ts",
	"tasks": {
		"test": "deno test -A --env-file",
		"test:watch": "deno test -A --env-file --watch",
		"npm:build": "deno run -A scripts/build-npm.ts",
		"npm:publish": "deno run -A scripts/build-npm.ts && cd ./.npm-dist && npm publish --access=public",
		"example": "deno run -A --env-file example/server.ts",
		"release": "deno run -A jsr:@marianmeres/deno-release",
		"publish": "deno publish && deno task npm:publish",
		"rp": "deno task release -y && deno task publish",
		"rpm": "deno task release minor -y && deno task publish"
	},
	"imports": {
		"@marianmeres/clog": "jsr:@marianmeres/clog@^3.15.0",
		"@marianmeres/data-to-sql-params": "jsr:@marianmeres/data-to-sql-params@^1.5.1",
		"@marianmeres/demino": "jsr:@marianmeres/demino@^1.4.2",
		"@marianmeres/npmbuild": "jsr:@marianmeres/npmbuild@^1.9.1",
		"@marianmeres/parse-boolean": "jsr:@marianmeres/parse-boolean@^2.0.5",
		"@marianmeres/pubsub": "jsr:@marianmeres/pubsub@^2.4.4",
		"@std/assert": "jsr:@std/assert@^1.0.16",
		"@std/fs": "jsr:@std/fs@^1.0.21",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@types/pg": "npm:@types/pg@^8.16.0",
		"pg": "npm:pg@^8.16.3"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 4
	}
}
